<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:background="@drawable/edit_text_background_border"
        android:textAlignment="viewStart"
        android:padding="16dp"
        android:hint="About Yourself"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="start" />
    <TextView
        android:layout_marginTop="14dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD SOCIAL MEDIA LINKS"
        android:textColor="@color/black"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/facebook" />

        <EditText
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/background_et_logo"
            android:paddingLeft="8dp"
            android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/twitter" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/background_et_logo"
            android:layout_gravity="center_vertical"
            android:paddingLeft="8dp"
            android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/google_plus" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/background_et_logo"
            android:paddingLeft="8dp"
            android:textColor="@color/black" />
    </LinearLayout>
    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/btn_save_vendor_details"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Done"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/app_background_color_a"
        android:layout_width="150dp"
        android:layout_height="30dp" />

</LinearLayout>