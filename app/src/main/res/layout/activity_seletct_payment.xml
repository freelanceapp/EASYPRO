<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.SeletctPaymentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/app_color"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Select Payment"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sub Total"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="RS 3500/-"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioGroup
            android:padding="20dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioButton
                android:textSize="16sp"
                android:background="@color/white"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:buttonTint="@color/app_color"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:text="Easy Paisa"
                android:textAlignment="viewStart"
                android:layout_height="wrap_content"
                tools:ignore="RtlCompat" />

            <RadioButton
                android:textSize="16sp"
                android:background="@color/white"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:paddingLeft="10dp"
                android:buttonTint="@color/app_color"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Credit Card"
                tools:ignore="RtlCompat" />

            <RadioButton
                android:textSize="16sp"
                android:buttonTint="@color/app_color"
                android:background="@color/white"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="Cash Payment" />

            <RadioButton
                android:textSize="16sp"
                android:background="@color/white"
                android:buttonTint="@color/app_color"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="Bank Transfer"
                />
        </RadioGroup>
    </LinearLayout>
    <Button
        android:textSize="18dp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/app_background_color_a"
        android:textColor="@color/white"
        android:text="Check Out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>