<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_vendor_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_vendor_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/image_profile" />

        <TextView
            android:id="@+id/tv_vendor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_vendor_profile"
            android:text="Wood Master"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_vendor_name"
            android:layout_marginBottom="30dp"
            android:text="Vendor"
            android:textAlignment="center"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:id="@+id/ll_vendor_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rl_vendor_profile"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/ll_ven_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="2dp">

            <TextView
                android:paddingBottom="4dp"
                android:id="@+id/tv_ven_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile Details"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <View
                android:id="@+id/view_ven_profile"
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:background="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/ll_ven_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="2dp">

            <TextView
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:paddingBottom="4dp"
                android:id="@+id/tv_ven_about"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="About"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <View
                android:id="@+id/view_ven_about"
                android:visibility="gone"
                android:layout_width="80dp"
                android:layout_height="3dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:id="@+id/ll_ven_chan_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="2dp">

            <TextView
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="4dp"
                android:id="@+id/tv_ven_chan_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Change Password"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <View
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/view_vend_chan_pass"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:background="@color/white" />
        </LinearLayout>
    </LinearLayout>
<ScrollView
    android:layout_below="@+id/ll_vendor_section"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_vendor_section"
            android:orientation="vertical"
            android:padding="26dp">

            <LinearLayout
                android:id="@+id/ll_vendor_profile_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:weightSum="6">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_account_box"
                        android:tint="@color/app_color" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_mail"
                        android:tint="@color/app_color" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_phone1"
                        android:tint="@color/app_color" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="26dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_location"
                        android:tint="@color/app_color" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:hint="Wood Master"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:hint="emmi_king@rocketmail.com"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:hint="3012704200"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:hint="gulsan iqbal karachi pakistan"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_vendor_about_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <EditText
                    android:background="@drawable/edit_text_background_border"
                    android:textAlignment="viewStart"
                    android:padding="16dp"
                    android:hint="About Yourself"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="start" />
                <TextView
                    android:layout_marginTop="14dp"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ADD SOCIAL MEDIA LINKS"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/facebook" />

                    <EditText
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/background_et_logo"
                        android:paddingLeft="8dp"
                        android:textColor="@color/black" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/twitter" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/background_et_logo"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:textColor="@color/black" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/google_plus" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/background_et_logo"
                        android:paddingLeft="8dp"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_vendor_change_pass_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/ic_lock"
                        android:tint="@color/app_color" />

                    <EditText
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="26dp"
                        android:layout_marginBottom="5dp"
                        android:hint="Current Password"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:textColor="@color/black" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="12dp"
                            android:src="@drawable/ic_lock"
                            android:tint="@color/app_color" />

                        <EditText
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="26dp"
                            android:hint="New Password"
                            android:inputType="textPassword"
                            android:padding="10dp"
                            android:textColor="@color/black" />
                    </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="12dp"
                            android:src="@drawable/ic_lock"
                            android:tint="@color/app_color" />

                        <EditText
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="26dp"
                            android:inputType="textPassword"
                            android:padding="10dp"
                            android:text="Confirm Password"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </LinearLayout>

        <Button
            android:layout_marginTop="40dp"
            android:id="@+id/btn_save_vendor_details"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Done"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/app_background_color_a"
            android:layout_width="150dp"
            android:layout_height="30dp" />

        </LinearLayout>
</ScrollView>
</RelativeLayout>
