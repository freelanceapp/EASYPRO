<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    tools:context=".ui.fragment.ForgotPasswordFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_vertical"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/white"
            android:tint="@color/white"
            android:background="@drawable/ic_forgot_password"
            android:layout_width="90dp"
            android:layout_height="90dp" />
        <TextView
            android:padding="30dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="New Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <TextView
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:text="Enter your new password below."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:paddingBottom="40dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:text="We're just being extra careful"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <TextView
            android:padding="5dp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:text="New Pasword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="14sp"
            android:backgroundTint="@color/white"
            android:inputType="textPassword"
            android:hint="abcd123abc"
            android:textColorHint="@color/gray_h"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="5dp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:text="Confirm Pasword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="14sp"
            android:backgroundTint="@color/white"
            android:inputType="textPassword"
            android:hint="abcd123abc"
            android:textColorHint="@color/gray_h"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/password_change"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="@color/app_color"
            android:layout_margin="20dp"
            android:background="@drawable/whitebackground"
            android:text="done"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
    </LinearLayout>
    </RelativeLayout>
</FrameLayout>